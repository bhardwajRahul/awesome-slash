{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "workflow-state.schema.json",
  "title": "Workflow State",
  "description": "Schema for next-task workflow orchestration state",
  "type": "object",
  "required": ["version", "workflow"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version for migrations"
    },
    "workflow": {
      "type": "object",
      "required": ["id", "type", "status", "startedAt"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^workflow-\\d{8}-\\d{6}-[a-z0-9]+$",
          "description": "Unique workflow identifier"
        },
        "type": {
          "type": "string",
          "enum": ["next-task", "ship", "manual"],
          "description": "Workflow type"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "paused", "completed", "failed", "aborted"],
          "description": "Current workflow status"
        },
        "startedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Workflow start timestamp"
        },
        "lastUpdatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Last state update timestamp"
        },
        "completedAt": {
          "type": ["string", "null"],
          "format": "date-time",
          "description": "Workflow completion timestamp"
        }
      }
    },
    "policy": {
      "type": "object",
      "properties": {
        "taskSource": {
          "type": "string",
          "enum": ["defaults", "gh-issues", "linear", "tasks-md", "custom"],
          "default": "gh-issues"
        },
        "priorityFilter": {
          "type": "string",
          "enum": ["continue", "bugs", "security", "features", "all"],
          "default": "continue"
        },
        "platform": {
          "type": "string",
          "enum": ["detected", "manual"],
          "default": "detected"
        },
        "stoppingPoint": {
          "type": "string",
          "enum": ["implemented", "pr-created", "all-green", "merged", "deployed", "production"],
          "default": "merged"
        },
        "mergeStrategy": {
          "type": "string",
          "enum": ["squash", "merge", "rebase"],
          "default": "squash"
        },
        "autoFix": {
          "type": "boolean",
          "default": true
        },
        "maxReviewIterations": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 3
        }
      }
    },
    "task": {
      "type": ["object", "null"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Task identifier (issue number, Linear ID, etc.)"
        },
        "source": {
          "type": "string",
          "enum": ["github", "linear", "tasks-md", "manual"]
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "labels": {
          "type": "array",
          "items": { "type": "string" }
        },
        "url": {
          "type": ["string", "null"],
          "format": "uri"
        },
        "linearId": {
          "type": ["string", "null"]
        }
      }
    },
    "git": {
      "type": ["object", "null"],
      "properties": {
        "originalBranch": {
          "type": "string",
          "description": "Branch before workflow started"
        },
        "workingBranch": {
          "type": "string",
          "description": "Feature branch for this task"
        },
        "worktreePath": {
          "type": ["string", "null"],
          "description": "Path to worktree if using isolated development"
        },
        "baseSha": {
          "type": "string",
          "description": "Base commit SHA when branched"
        },
        "currentSha": {
          "type": "string",
          "description": "Current HEAD commit SHA"
        },
        "isWorktree": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "pr": {
      "type": ["object", "null"],
      "properties": {
        "number": {
          "type": "integer"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "state": {
          "type": "string",
          "enum": ["draft", "open", "merged", "closed"]
        },
        "ciStatus": {
          "type": "string",
          "enum": ["pending", "running", "success", "failure", "unknown"]
        },
        "reviewState": {
          "type": "string",
          "enum": ["pending", "changes_requested", "approved", "dismissed"]
        },
        "lastCheckedAt": {
          "type": "string",
          "format": "date-time"
        },
        "checksWaitingCount": {
          "type": "integer",
          "default": 0
        }
      }
    },
    "phases": {
      "type": "object",
      "properties": {
        "current": {
          "type": "string",
          "enum": [
            "policy-selection",
            "task-discovery",
            "worktree-setup",
            "exploration",
            "planning",
            "user-approval",
            "implementation",
            "review-loop",
            "delivery-approval",
            "ship-prep",
            "create-pr",
            "ci-wait",
            "comment-fix",
            "merge",
            "production-ci",
            "deploy",
            "production-release",
            "complete"
          ]
        },
        "currentIteration": {
          "type": "integer",
          "minimum": 0,
          "default": 0
        },
        "history": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["phase", "status", "startedAt"],
            "properties": {
              "phase": { "type": "string" },
              "status": {
                "type": "string",
                "enum": ["pending", "in_progress", "completed", "failed", "skipped"]
              },
              "startedAt": { "type": "string", "format": "date-time" },
              "completedAt": { "type": ["string", "null"], "format": "date-time" },
              "duration": { "type": "integer", "description": "Duration in milliseconds" },
              "iteration": { "type": "integer" },
              "result": { "type": "object" }
            }
          }
        }
      }
    },
    "agents": {
      "type": ["object", "null"],
      "properties": {
        "lastRun": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "status": { "type": "string", "enum": ["pending", "running", "completed", "failed"] },
              "issues": { "type": "integer" },
              "critical": { "type": "integer" },
              "high": { "type": "integer" }
            }
          }
        },
        "totalIterations": { "type": "integer", "default": 0 },
        "totalIssuesFound": { "type": "integer", "default": 0 },
        "totalIssuesFixed": { "type": "integer", "default": 0 }
      }
    },
    "checkpoints": {
      "type": "object",
      "properties": {
        "canResume": {
          "type": "boolean",
          "default": true
        },
        "resumeFrom": {
          "type": ["string", "null"],
          "description": "Phase to resume from"
        },
        "resumeContext": {
          "type": ["object", "null"],
          "description": "Additional context needed for resume"
        }
      }
    },
    "metrics": {
      "type": ["object", "null"],
      "properties": {
        "totalDuration": { "type": "integer", "description": "Total duration in milliseconds" },
        "tokensUsed": { "type": "integer" },
        "toolCalls": { "type": "integer" },
        "filesModified": { "type": "integer" },
        "linesAdded": { "type": "integer" },
        "linesRemoved": { "type": "integer" }
      }
    }
  }
}
